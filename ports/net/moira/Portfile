# $Id$
PortSystem		1.0
PortGroup 		github 1.0
name			moira
	
github.setup	mit-athena moira 4.0.0.3
version			4.0.0.3	
categories		net
maintainers		mit.edu:sipb-macathena
description		MIT Athena's Moira service management system
platforms		darwin

checksums      	sha256 d418681ae4ec61a124c55fb67a6bba0d89b59dc760c4d1c9a1e8e1c9c7b69b19

worksrcdir		${distname}/moira
configure.args		--with-hesiod=${prefix} --with-com_err --without-krb4 --with-krb5=${prefix} --disable-dependency-tracking --disable-silent-rules --disable-rpath --without-zephyr --without-oracle --without-afs
depends_lib		port:libhesiod port:kerberos5

pre-fetch {
port -f uninstall ncurses
}

post-build {
port install ncurses
}

post-destroot {
mv ${destroot}${prefix}/bin/chfn ${destroot}${prefix}/bin/chfn.moira
mv ${destroot}${prefix}/bin/chsh ${destroot}${prefix}/bin/chsh.moira
}