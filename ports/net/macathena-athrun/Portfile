post-destroot {
	file attributes ${worksrcpath}/athrun -permissions 0755
	file copy ${worksrcpath}/athrun ${destroot}${prefix}/bin/athrun
	file copy ${worksrcpath}/athrun.1 ${destroot}${prefix}/share/man/man1/athrun.1
