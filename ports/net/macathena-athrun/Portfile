	depends_run		port:zenity \
				port:macathena-athrun
	destroot {
		file copy ${worksrcpath}/gathrun ${destroot}${prefix}/bin/gathrun
		file copy ${worksrcpath}/gathrun.1 ${destroot}${prefix}/share/man/man1/gathrun.1
	}
