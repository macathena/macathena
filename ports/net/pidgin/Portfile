# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem 1.0
default_variants +quartz

# Include the pidgin port from the same source that provides
# "macports" (i.e. upstream).
set upstream_ports [mport_lookup macports]
array set upstream [lindex $upstream_ports 1]
source [file join [getportdir $upstream(porturl)] ../../net/pidgin/Portfile]
# the docs claim $filespath is read only: https://guide.macports.org/chunked/reference.variables.html 
# so while changing it works I'm a little worried
set filespath [getportdir $upstream(porturl)]/../../net/pidgin/files
